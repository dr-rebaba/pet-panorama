<div class="container">
  <div class="row d-flex justify-content-center mt-3 rounded-2">
    <% @products.last(3).each do |product| %>
      <div class="col-3 mx-3 my-3 shadow p-3 mb-5 bg-white rounded d-flex flex-column card-hover">
        <div class="d-flex flex-column flex-grow-1">
          <div class="d-flex justify-content-center ms-3">
            <%= cl_image_tag product.photo.key, class: 'product-image', height: 200, width: 200, crop: :fill if product.photo.attached? %>
          </div>
          <div class="d-flex justify-content-center mt-3">
            <h5><%= product.title %></h5>
          </div>
          <div class="d-flex justify-content-center">
            <p class="product-description"><%= product.description %></p>
          </div>
          <div class="d-flex justify-content-center">
            <div class="d-flex pe-4 align-items-center">
              <h6 class="me-2 mb-0">Quantity:</h6>
              <span><%= product.quantity %></span>
            </div>
            <div class="d-flex align-items-center">
              <h6 class="me-2 mb-0">Price:</h6>
              <i class="fa-solid fa-dollar-sign"></i>
              <span><%= product.price %></span>
            </div>
          </div>
        </div>
        <div class="mt-auto d-flex justify-content-center">
          <%= link_to "More info", product_path(product), class: "btn btn-more-info rounded" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
