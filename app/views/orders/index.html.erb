<h1>Your Orders</h1>
<% if @orders.any? %>
  <ul>
    <% @orders.each do |order| %>
      <li>
        <%= link_to "Order ##{order.id}", order_path(order) %> -
        <%= display_order_status(order.status) %> -
        <%= order.date %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No orders found.</p>
<% end %>
