<div class="container">

  <div class="container my-2">
      <div>
          <div class="flex">
            <div class="d-flex justify-content-start mt-3">
              <h4 ><%= @product.title %></h4>
            </div>
            <div class="d-flex justify-content-start ms-3">
              <%= cl_image_tag @product.photo.key, :size => "200x200" %>
            </div>
            <div class="d-flex justify-content-start">
              <p><%= @product.description %></p>
            </div>
            <div class="d-flex justify-content-start">
              <div class="d-flex pe-4 align-items-center">
                <h6 class="me-2 mb-0">Quantity:</h6>
                <span><%= @product.quantity %></span>
              </div>
              <div class="d-flex align-items-center">
                <h6 class="me-2 mb-0">Price:</h6>
                <i class="fa-solid fa-dollar-sign"></i>
                <span><%= @product.price %></span>
              </div>
            </div>
          </div>
      </div>
      <div class="d-flex justify-content-between my-3">
          <div>
            <%= link_to "Add to cart", "", class: "btn btn-primary text-white"%>
            <%= link_to "Delete this product", product_path(@product), class: "btn btn-danger text-white", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" } %>
          </div>
      </div>
    <hr class="my-2">

    <div class="row">
      <div class="col-12 col-sm-6">
        <h3>Reviews</h3>
        <% if @product.reviews.empty? %>
          <small><em class="text-muted">Be the first one to review this product</em></small>
        <% end %>
        <% @product.reviews.each do |review| %>
          <div>
            <%= review.rating.times do %>
              <i class="fas fa-star star-yellow"></i>
            <% end %>
            <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
            <p class="mb-0"><%= review.comment %></p>
          </div>
          <hr>
        <% end %>
      </div>
      <div class="col-12 col-sm-6">
        <div class="bg-white rounded p-3">
          <h5>Add your review</h5>
          <%= simple_form_for [@product, @review] do |f| %>
            <%= f.input :comment, placeholder: "Add your review here..." %>
            <%= f.input :rating, as: :select, collection: (1..5), required: true, label: false, input_html: { data: { controller: "star-rating" } } %>
            <%= f.submit class: "btn btn-primary mt-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
