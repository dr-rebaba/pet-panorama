<div class="position-relative">
  <div>
    <h1><%= @product.title %></h1>
  </div>
</div>
<div class="container mb-5">
    <div>
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <%= @product.title %>
          </div>
          <div class="flex">
            <%= @product.description %>
          </div>
          <div class="flex ms-3">
            <%= @product.quantity %>
          </div>
          <div class="flex ms-3">
            <%= @product.price %>
          </div>
          <div class="flex ms-3">
            <%= cl_image_tag @product.photo.key, :size => "200x200" %>
          </div>
        </div>
    </div>
  <div class="d-flex justify-content-between my-4">
        <div>
      <%= link_to "delete this product", product_path(@product), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" } %>
    </div>
  </div>
  <hr class="my-5">
  <div class="row">
    <div class="col-12 col-sm-6">
      <h3>Reviews</h3>
      <% if @product.reviews.empty? %>
        <small><em class="text-muted">Be the first one to review this product</em></small>
      <% end %>
      <% @product.reviews.each do |review| %>
        <div>
          <%= review.rating.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
          <p class="mb-0"><%= review.comment %></p>
        </div>
        <hr>
      <% end %>
    </div>
    <div class="col-12 col-sm-6">
      <div class="bg-white rounded p-3">
        <h5>Add your review</h5>
        <%= simple_form_for [@product, @review] do |f| %>
          <%= f.input :comment, placeholder: "Add your review here..." %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, label: false, input_html: { data: { controller: "star-rating" } } %>
          <%= f.submit class: "btn btn-flat mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
